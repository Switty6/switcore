    // Numărul maxim de conexiuni în pool (recomandat: 20)
    max: 20,
    
    // Timpul după care se închid conexiunile inactive (în milisecunde)
    idleTimeoutMillis: 30000,
    
    // Timpul maxim de așteptare pentru o conexiune nouă (în milisecunde)
    connectionTimeoutMillis: 2000
