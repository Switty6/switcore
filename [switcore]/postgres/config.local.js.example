// Acest fișier este folosit dacă NU există variabile de mediu

module.exports = {
    // Host-ul bazei de date PostgreSQL
    // Exemplu: 'localhost' sau '192.168.1.100' sau 'postgres.example.com'
    host: 'localhost',
    
    // Port-ul bazei de date (implicit PostgreSQL folosește 5432)
    port: 5432,
    
    // Numele bazei de date pe care vrei să te conectezi
    database: 'fivem',
    
    // Utilizatorul pentru baza de date
    user: 'postgres',
    
    // Parola pentru utilizator
    // ⚠️ SCHIMBĂ ACEASTĂ PAROLĂ CU PAROLA TA!
